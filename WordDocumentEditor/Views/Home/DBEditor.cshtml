

<h2>Documents</h2>

<form asp-action="UploadDocument" method="post" enctype="multipart/form-data">
    <label for="file">Upload File:</label>
    <input type="file" name="file" id="file" />
    <button type="submit">Upload</button>
</form>

<table id="documentTable" border="1">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    var httpRequest = new XMLHttpRequest();
    httpRequest.open('POST', '/DBEditor/TakeData', true);

    httpRequest.setRequestHeader("Content-Type", "application/json;charset=UTF-8");

    httpRequest.onreadystatechange = function () {
        if (httpRequest.readyState === 4) {
            if (httpRequest.status === 200 || httpRequest.status === 304) {
                var documents = JSON.parse(httpRequest.responseText);

                var tableBody = document.querySelector('#documentTable tbody');
                tableBody.innerHTML = '';

                documents.forEach(function (doc) {
                    var row = `
                                <tr>
                                    <td>${doc.FileName}</td>
                                    <td>
                                        <form action="/Home/Delete/${doc.FileId}" method="post" style="display:inline;">
                                            <button type="submit" onclick="return confirm('Are you sure you want to delete this file?')">Delete</button>
                                        </form>

                                    </td>
                                </tr>`;
                    tableBody.innerHTML += row; // Append the row to the table
                });
            } else {
                console.error('Error fetching documents: ' + httpRequest.statusText);
            }
        }
    };

    // Send the request
    httpRequest.send();
</script>
